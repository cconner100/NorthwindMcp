{
  "//": "Development configuration for Northwind MCP Client",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "_comment_azure": "Replace with your actual Azure OpenAI credentials",
  "AzureOpenAI": {
    "Endpoint": "https://your-resource-name.openai.azure.com/",
    "ApiKey": "your-api-key-here",
    "DeploymentName": "gpt-4o",
    "ApiVersion": "2024-06-01"
  },
  "_comment_mcp": "MCP server configurations - first one is the Northwind server",
  "McpClients": [
    {
      "_description": "Main Northwind database server with debugger attachment",
      "Name": "Northwind Server",
      "Command": "dotnet",
      "Arguments": ["run", 
                    "--project", 
                    "../Server/NorthwindMcpServer.csproj",
                   "--",
                    "--attach-debugger"
        ]
    },
    {
      "_description": "Example of additional MCP server (disabled by default)",
      "Name": "Another MCP Server",
      "Command": "python",
      "Arguments": ["path/to/another/server.py"]
    }
  ]
}
